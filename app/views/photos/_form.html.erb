<%= form_for @photo, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :private, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :private, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo_data, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :photo_data %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                photos_path, :class => 'btn' %>
  </div>
<% end %>
