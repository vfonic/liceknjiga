<% @page_title = "User Login" %>

<div class="login">
  <%= form_tag(:action => 'attempt_login', :class => 'form_vertical') do %>
  <div class="control-group">
    <%= label_tag :username, nil, :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :username, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, nil, :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
  <% end %>
</div>
